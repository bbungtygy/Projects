<h1>user/_form.html.erb</h1>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :email %>
  <%= f.text_field :email %><br>
  <%= f.label :password %>
  <%= f.password_field :password %><br>
  <%= f.label :pw_confirm %>
  <%= f.password_field :pw_confirm %><br>
  <%= f.submit %>
<% end %>
